<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.ehcache.org/v3"
        xmlns:jsr107="http://www.ehcache.org/v3/jsr107"
        xsi:schemaLocation="
            http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd
            http://www.ehcache.org/v3/jsr107 http://www.ehcache.org/schema/ehcache-107-ext-3.0.xsd">

    <cache alias="placeConsumeFindAllStates">
        <expiry>
            <ttl unit="days">1</ttl>
        </expiry>
        <resources>
            <offheap unit="MB">10</offheap>
        </resources>
    </cache>

    <cache alias="placeConsumeFindAllCitiesByState">
        <expiry>
            <ttl unit="days">1</ttl>
        </expiry>
        <resources>
            <offheap unit="MB">50</offheap>
        </resources>
    </cache>

    <cache alias="placeServiceFindAllStates">
        <expiry>
            <ttl unit="days">1</ttl>
        </expiry>
        <resources>
            <offheap unit="MB">10</offheap>
        </resources>
    </cache>

    <cache alias="placeServiceFindAllCitiesByState">
        <expiry>
            <ttl unit="days">1</ttl>
        </expiry>
        <resources>
            <offheap unit="MB">200</offheap>
        </resources>
    </cache>

    <cache alias="placeServiceFindAllCities">
        <expiry>
            <ttl unit="days">1</ttl>
        </expiry>
        <resources>
            <offheap unit="MB">200</offheap>
        </resources>
    </cache>

    <cache alias="placeServiceFindCityByName">
        <expiry>
            <ttl unit="days">5</ttl>
        </expiry>
        <resources>
            <offheap unit="MB">50</offheap>
        </resources>
    </cache>

    <cache alias="placeServiceFindCityByStateAcronymAndCityName">
        <expiry>
            <ttl unit="days">5</ttl>
        </expiry>
        <resources>
            <offheap unit="MB">50</offheap>
        </resources>
    </cache>

</config>
